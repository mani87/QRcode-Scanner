<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <Button
        android:id="@+id/btn_hall1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Hall number 1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_hall2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Hall number 2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_hall3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="hall number 3"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_hall4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="hall number 4"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_hall5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Hall number 5"
        android:textSize="18sp" />
</LinearLayout>
